    <title>Alcometer</title>
    <link rel="stylesheet" type="text/css" href="Alkometricss.css">
</head>
<body>
    <h1>Alcometer</h1>
    <form id="alcometer-form">
        <label for="weight">Weight (kg):</label>
        <input type="number" id="weight" required><br><br>

        <label for="gender">Gender:</label>
        <select id="gender">
            <option value="male">Male</option>
            <option value="female">Female</option>
        </select><br><br>

        <label for="bottles">Number of Beer Bottles Drunk:</label>
        <select id="bottles">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
            <option value="9">9</option>
        </select><br><br>

        <label for="time">Time (hours):</label>
        <select id="time">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
            <option value="9">9</option>
        </select><br><br>

        <button type="button" onclick="calculateBAC()">Calculate BAC</button><br><br>

        <div id="result">Blood Alcohol Level: </div>
    </form>

    <script>
        function calculateBAC() {
            const weight = parseFloat(document.getElementById('weight').value);
            const gender = document.getElementById('gender').value;
            const bottles = parseFloat(document.getElementById('bottles').value);
            const time = parseFloat(document.getElementById('time').value);

            const litres = bottles * 0.33;
            let grams = litres * 8 * 4.5;
            const burning = weight / 10;
            grams -= burning * time;
            
            if (grams < 0) {
                grams = 0;
            }

            let result;
            if (gender === 'male') {
                result = grams / (weight * 0.7);
            } else {
                result = grams / (weight * 0.6);
            }

        
            document.getElementById('result').textContent = `Blood Alcohol Level: ${result.toFixed(2)}`;
        }
    </script>
</body>
